{
    "search.exclude": {
        ".DS_Store": true,
        "**/.cache": true,
        "**/.pytest_cache": true,
        "**/.git": true,
        "**/backend/venv": true,
        "**/frontend/public": true,
        "**/node_modules": true,
        "**/public-storybook": true,
        "**/dist": true,
        "**/dist-prod": true,
        "**/dist-staging": true,
        "**/dist-test": true,
        "**/vendor/": true,
        "**/github.com/": true
    },
    "files.watcherExclude": {
        ".DS_Store": true,
        "**/.cache": true,
        "**/.pytest_cache": true,
        "**/.git": true,
        "**/backend/venv": true,
        "**/frontend/public": true,
        "**/node_modules": true,
        "**/public-storybook": true,
        "**/dist": true,
        "**/dist-prod": true,
        "**/dist-staging": true,
        "**/dist-test": true,
        "**/vendor/": true,
        "**/github.com/": true
    },
    "keyboard.dispatch": "keyCode",
    "emmet.includeLanguages": {
        "javascript": "javascriptreact",
        "typescript": "typescriptreact"
    },
    "emmet.triggerExpansionOnTab": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "workbench.list.smoothScrolling": true,
    "workbench.colorCustomizations": {
        "diffEditor.insertedTextBackground": "#99b76d23",
        "diffEditor.insertedTextBorder": "#addb6733",
        "diffEditor.removedTextBackground": "#ef535033",
        "diffEditor.removedTextBorder": "#ef53504d"
    },
    "javascript.updateImportsOnFileMove.enabled": "prompt",
    "javascript.preferences.importModuleSpecifier": "non-relative",
    "typescript.preferences.importModuleSpecifier": "non-relative",
    "typescript.tsdk": "node_modules/.pnpm/typescript@4.7.4/node_modules/typescript/lib",
    "editor.stickyScroll.enabled": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "[javascript]": {
        "editor.formatOnSave": true
    },
    "[json]": {
        "editor.formatOnSave": false
    },
    "[html]": {
        "editor.formatOnSave": false
    },
    "[markdown]": {
        "editor.formatOnSave": false
    },
    "[yaml]": {
        "editor.formatOnSave": false
    },
    "[python]": {
        "editor.formatOnSave": true,
        "editor.formatOnType": true
    },
    "[graphql]": {
        "editor.formatOnSave": false
    },
    "[go]": {
        "editor.insertSpaces": false,
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        },
        "editor.defaultFormatter": "golang.go"
    },
    "prettier.tabWidth": 4,
    "prettier.trailingComma": "es5",
    "go.formatTool": "gofmt",
    "go.alternateTools": {
        "gofmt": "gofumpt"
    },
    "go.useLanguageServer": true,

    "editor.renderWhitespace": "boundary",
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit",
        "source.addMissingImports": "never"
    },
    "editor.cursorSurroundingLines": 5,
    "editor.fontFamily": "Iosevka, Fira Code, Hack, 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.fontWeight": "500",
    "editor.fontSize": 19,
    "editor.fontLigatures": true,
    "eslint.workingDirectories": ["frontend"],
    "vim.easymotion": false,
    "vim.leader": "<space>",
    "vim.highlightedyank": {
        "enable": true,
        "duration": 100
    },
    "vim.sneak": true,
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["J"],
            "after": ["5", "j"]
        },
        {
            "before": ["K"],
            "after": ["5", "k"]
        },
        {
            "before": ["<C-h>"],
            "after": ["<C-w>", "h"]
        },
        {
            "before": ["<C-l>"],
            "after": ["<C-w>", "l"]
        },
        {
            "before": ["<C-j>"],
            "after": ["<C-w>", "j"]
        },
        {
            "before": ["<C-k>"],
            "after": ["<C-w>", "k"]
        },
        {
            "before": ["<leader>", "h"],
            "after": ["<C-w>", "h"]
        },
        {
            "before": ["<leader>", "l"],
            "after": ["<C-w>", "l"]
        },
        {
            "before": ["<leader>", "j"],
            "after": ["<C-w>", "j"]
        },
        {
            "before": ["<leader>", "k"],
            "after": ["<C-w>", "k"]
        },
        {
            "before": ["<leader>", "/"],
            "commands": [":nohl"]
        },
        {
            "before": ["<leader>", "w"],
            "commands": ["workbench.action.files.save"]
        },
        {
            "before": ["<leader>", "q"],
            "commands": ["workbench.action.closeActiveEditor"]
        },
        {
            "before": ["<leader>", "t", "t"],
            "commands": [":tabnew"]
        },
        {
            "before": ["<leader>", "t", "n"],
            "commands": [":tabnext"]
        },
        {
            "before": ["<leader>", "t", "p"],
            "commands": [":tabprev"]
        },
        {
            "before": ["<leader>", "t", "o"],
            "commands": [":tabo"]
        }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": ["J"],
            "after": ["5", "j"]
        },
        {
            "before": ["K"],
            "after": ["5", "k"]
        }
    ],
    "vim.handleKeys": {
        "<C-f>": false
    },
    "vim.hlsearch": true,
    "gitlens.codeLens.enabled": false,
    "gitlens.hovers.currentLine.enabled": false,
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.plusFeatures.enabled": false,
    "gitlens.statusBar.enabled": true,
    "gitlens.statusBar.command": "gitlens.showQuickCommitDetails",
    "workbench.colorTheme": "Soft Colors",
    "python.formatting.provider": "black",
    "security.workspace.trust.untrustedFiles": "open",
    "git.ignoreLegacyWarning": true,
    "files.insertFinalNewline": true,
    "vscode-neovim.neovimExecutablePaths.linux": "/usr/local/bin/nvim",
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "editor.minimap.enabled": false,
    "workbench.editor.empty.hint": "hidden",
    "gitlab.aiAssistedCodeSuggestions.enabled": false,
    "gitlab.duoChat.enabled": false,
    "gitlens.showWelcomeOnInstall": false,
    "gitlens.currentLine.enabled": false,
    "github.copilot.enable": {
        "*": false,
        "plaintext": false,
        "markdown": false,
        "scminput": false
    },
    "github.copilot.advanced": {},
    "github.copilot.editor.enableAutoCompletions": true,
    "scm.workingSets.enabled": true,
    "github.copilot.editor.enableCodeActions": false
    // "vscode-neovim.useCtrlKeysForNormalMode": false,
    // "vscode-neovim.useCtrlKeysForInsertMode": false
}
